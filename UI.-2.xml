       <Option selected="true" >Choose Action</Option>
       <Option>Choose Chancellor </Option>
       <Option>Inspect Player</Option>
       <Option>Give Presidency To</Option>
   </Dropdown>

   <Dropdown id="color" onValueChanged="UIColor">
